@model List<Car>
@{
    ViewData["Title"] = "Arabalar";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

@{
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Marka</th>
        <th>Model Adı</th>
        <th>Model Yılı</th>
        <th>Kilometre</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Brand.BrandName</td>
            <td>@item.ModelName</td>
            <td>@item.Year</td>
            <td>@item.Kilometer</td>
            <td><a asp-action="DeleteAbout" asp-route-id="@item.CarId" class="btn btn-danger">Sil</a></td>
            <td><a asp-action="UpdateAbout" asp-route-id="@item.CarId" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>

<div class="text-center">
    <a asp-action="CreateCar" asp-controller="AdminCar" class="btn btn-primary">Yeni Araba Ekle</a>
</div>

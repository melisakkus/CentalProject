@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

@{
    int count = 0;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="width:75px;height:75px" /> </td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a asp-action="DeleteBanner" asp-controller="AdminBanner" asp-area="Admin"  asp-route-id="@item.BannerId" class="btn btn-danger">Sil</a> </td>
            <td><a asp-action="UpdateBanner" asp-controller="AdminBanner" asp-area="Admin"  asp-route-id="@item.BannerId" class="btn btn-info">Güncelle</a> </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="CreateBanner" asp-controller="AdminBanner" asp-area="Admin" class="btn btn-primary">Yeni Öne Çıkan Alan Ekle</a>
</div>


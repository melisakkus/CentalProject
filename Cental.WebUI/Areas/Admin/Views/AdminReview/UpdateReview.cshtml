@model UpdateReviewDto
@{
    ViewData["Title"] = "Araba Değerlendirme Puanı Güncelleme";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="ReviewId"/>
    <div>
        <label>Puan</label>
        <input type="number" class="form-control" asp-for="Rating" />
    </div>
    <br />

    <div>
        <label>Araba</label>
        <input type="number" class="form-control" asp-for="CarId" />
    </div>
    <br />

    <div class="text-center">
        <button class="btn btn-outline-primary">Kaydet</button>
    </div>
    <br />
</form>

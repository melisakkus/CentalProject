@model List<Review>
@{
    ViewData["Title"] = "Araç Değerlendirmelerim";
    Layout = "~/Areas/User/Views/UserLayout/Layout.cshtml";
}

@{
    int count = 0;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Seçilen Araç</th>
        <th>Puan</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var review in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@review.Car.ModelName @review.Car.Brand.BrandName</td>
            <td>@review.Rating / 10 </td>

            <td><a asp-action="DeleteReview" asp-controller="Review" asp-area="User" asp-route-id="@review.ReviewId" class="btn btn-danger">Sil</a></td>
            <td><a asp-action="UpdateReview" asp-controller="Review" asp-area="User" asp-route-id="@review.ReviewId" class="btn btn-info">Güncelle</a></td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="CreateReview" asp-controller="Review" asp-area="User" class="btn btn-primary">Yeni Değerlendirme Oluştur</a>
</div>


@model List<ResultProcessDto>
@*
    _DefaultProcessComponent
*@
@{
    int count = 0;
}
<!-- Car Steps Start -->
<div class="container-fluid steps py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize text-white mb-3">Cental'da <span class="text-primary">Süreç Nasıl İşler?</span></h1>
            <p class="mb-0 text-white">
                Araç kiralama işleminizi hızlı ve sorunsuz bir şekilde tamamlamanız için basit adımları takip edin. Konforlu ve güvenli bir yolculuk için doğru aracı seçin ve yola çıkın!
            </p>
        </div>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                count++;
            <div class="col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
                <div class="steps-item p-4 mb-4">
                    <h4>@item.Title</h4>
                    <p class="mb-0">@item.Description</p>
                    <div class="setps-number">@count</div>
                </div>
            </div>
            }
        </div>
    </div>
</div>
<br />
<!-- Car Steps End -->
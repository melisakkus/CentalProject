<form class="filter-form mb-4" asp-action="FilterCars" asp-controller="Cars" method="post">
    <div class="container mt-4">
        <div class="row g-3">
            <div class="col-md-3">
                <div class="form-group">
                    <select class="form-control" asp-items="@ViewBag.brands" name="brand">
                        <option selected disabled>Marka Seçin</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <select class="form-control" asp-item="@ViewBag.gasTypes" name="gas">
                        <option selected disabled>Yakıt Seçin</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <select class="form-control" asp-item="@ViewBag.gearTypes" name="gear">
                        <option selected disabled>Vites Seçin</option>
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <input type="number" class="form-control" name="year" placeholder="En Düşük Model Yılı...">
                </div>
            </div>
            <div class="col-md-1 d-flex align-items-center">
                <button class="btn btn-danger w-100">Filtrele</button>
            </div>
        </div>
    </div>
</form>
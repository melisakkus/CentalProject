@model GeneralInfo
@*
    _LayoutFooterComponent
*@

<div class="container-fluid footer py-5 wow fadeIn" data-wow-delay="0.2s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                        <h4 class="text-white mb-4">Üye Olmak İster Misiniz?</h4>
                    <div class="position-relative">
                        @await Component.InvokeAsync("_LayoutSubscribeComponent", new UserRegisterDto{})
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-white mb-4">Hızlı Erişim</h4>
                    <a href="/AboutUs/Index"><i class="fas fa-angle-right me-2"></i> Hakkımızda</a>
                    <a href="/Cars/Index"><i class="fas fa-angle-right me-2"></i> Araçlar</a>
                    <a href="/Service/Index"><i class="fas fa-angle-right me-2"></i> Hizmetler</a>
                    <a href="/Contact/Index"><i class="fas fa-angle-right me-2"></i> İletişim</a>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-white mb-4">Çalışma Saatleri</h4>
                    <div class="mb-3">
                        <h6 class="text-muted mb-0">Pzt - Cuma:</h6>
                        <p class="text-white mb-0">@Model.OpeningHours</p>
                    </div>
                    <div class="mb-3">
                        <h6 class="text-muted mb-0">Cumartesi:</h6>
                        <p class="text-white mb-0"> @Model.ClosingHourse</p>
                    </div>
                    <div class="mb-3">
                        <h6 class="text-muted mb-0">Tatil:</h6>
                        <p class="text-white mb-0">Pazar günleri kapalıyız.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-white mb-4">İletişim Bilgileri</h4>
                    <a href="https://maps.app.goo.gl/s7VW3AKrAZnFQKzT7"><i class="fa fa-map-marker-alt me-2"></i> @Model.Location</a>
                    <a href=" @Model.Email"><i class="fas fa-envelope me-2"></i>  @Model.Email</a>
                    <a href=" @Model.PhoneNumber"><i class="fas fa-phone me-2"></i> @Model.PhoneNumber</a>
                    <a href=" @Model.PhoneNumber2" class="mb-3"><i class="fas fa-print me-2"></i> @Model.PhoneNumber2</a>
                    <div class="d-flex">
                        <a class="btn btn-secondary btn-md-square rounded-circle me-3" href=" @Model.SocialMediaAddress1"><i class="fab fa-facebook-f text-white"></i></a>
                        <a class="btn btn-secondary btn-md-square rounded-circle me-3" href=" @Model.SocialMediaAddress2"><i class="fab fa-twitter text-white"></i></a>
                        <a class="btn btn-secondary btn-md-square rounded-circle me-3" href=" @Model.SocialMediaAddress3"><i class="fab fa-instagram text-white"></i></a>
                        <a class="btn btn-secondary btn-md-square rounded-circle me-0" href=" @Model.SocialMediaAddress4"><i class="fab fa-linkedin-in text-white"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
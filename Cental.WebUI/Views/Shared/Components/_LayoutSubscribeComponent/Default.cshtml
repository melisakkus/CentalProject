@model UserRegisterDto
@*
    _LayoutSubscribeComponent
*@

<form asp-action="SignUp" asp-controller="Register" method="post">
  
    <div class="card-body">
        <div class="form-group mb-3">
            <input type="text" class="form-control" asp-for="FirstName" placeholder="Adınız" required>
        </div>
        <div class="form-group mb-3">
            <input type="text" class="form-control" asp-for="LastName" placeholder="Soyadınız" required>
        </div>
        <div class="form-group mb-3">
            <input type="text" class="form-control" asp-for="UserName" placeholder="Kullanıcı Adı" required>
        </div>
        <div class="form-group mb-3">
            <input type="email" class="form-control" asp-for="Email" placeholder="Email Adresiniz" required>
        </div>
        <div class="form-group mb-4">
            <input type="password" class="form-control" asp-for="Password" placeholder="Şifre" required>
        </div>
        <div class="form-group mb-4">
            <input type="password" class="form-control" asp-for="ConfirmPassword" required placeholder="Şifreyi Doğrulayın" />
        </div>
        <p style="color:red">
            @Html.ValidationSummary()
        </p>
        <div class="text-center">
            <button  class="btn btn-primary btn-block mb-4" type="submit">Üye Ol</button>
        </div>
        <hr>
    </div>
</form>
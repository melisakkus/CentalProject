@model List<ResultProcessDto>
@{
    ViewData["Title"] = "Süreç Bilgileri Hakkında";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}
@{
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a asp-action="DeleteProcess" asp-route-id="@item.ProcessId" class="btn btn-danger">Sil</a></td>
            <td><a asp-action="UpdateProcess" asp-route-id="@item.ProcessId" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>

<div class="text-center">
    <a asp-action="CreateProcess" asp-controller="AdminProcess" asp-area="Admin" class="btn btn-primary">Yeni Hakkımızda Ekle</a>
</div>

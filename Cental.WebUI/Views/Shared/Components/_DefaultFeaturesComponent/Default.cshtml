@model List<ResultFeatureDtos>
@*
    _DefaultFeaturesComponent
*@
<!-- Features Start -->
<div class="container-fluid feature py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize mb-3">Cental <span class="text-primary">Özellikler ve Ayrıcalıkları</span></h1>
            <p class="mb-0">
                Sizlere en iyi deneyimi sunmak için özenle seçilmiş araçlar ve üstün hizmetlerle yolculuğunuzu mükemmelleştiriyoruz. Konfor, güvenlik ve hız her zaman önceliğimizdir.
            </p>
        </div>
        <div class="row g-4 align-items-center">
            <div class="col-xl-4">
                @foreach (var item in ViewBag.featuresFirst2)
                {
                    <div class="col-12 wow fadeInUp" data-wow-delay="0.3s">
                        <div class="feature-item justify-content-end">
                            <div class="text-end me-4">
                                <h5>@item.Title</h5>
                                <p class="mb-0">@item.Description</p>
                            </div>
                            <div class="feature-icon">
                                <span class="@item.Icon"></span>
                            </div>
                        </div>
                    </div>
                    <br />
                }
            </div>
            <div class="col-lg-12 col-xl-4 wow fadeInUp" data-wow-delay="0.2s">
                <img src="~/Cental-1.0.0/img/features-img.png" class="img-fluid w-100" style="object-fit: cover;" alt="Img">
            </div>
            <div class="col-xl-4">
                @foreach (var item in ViewBag.featuresLast2)
                    {
                    <div class="col-12 wow fadeInUp" data-wow-delay="0.3s">
                        <div class="feature-item justify-content-end">
                            <div class="text-end me-4">
                                <h5>@item.Title</h5>
                                <p class="mb-0">@item.Description</p>
                            </div>
                            <div class="feature-icon">
                                <span class="@item.Icon"></span>
                            </div>
                        </div>
                    </div>
                    <br />
                    }
            </div>
        </div>
    </div>
</div>
<!-- Features End -->
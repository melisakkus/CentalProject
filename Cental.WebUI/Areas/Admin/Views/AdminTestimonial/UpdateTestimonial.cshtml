@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="TestimonialId" />

    <div class="text-center">
        <label>Varsayılan Resim</label>
        <br />
        <input type="hidden" asp-for="ImageUrl" />
        <image src="@Model.ImageUrl" style="height:250px;width:250px" ></image>
    </div>
    <br />

    <div>
        <label>Yeni Resim Ekle</label>
        <input type="file" class="form-control" asp-for="ImageFile" />
    </div>
    <br />

    <div>
        <label>Ad Soyad</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <br />

    <div>
        <label>Ünvan</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>
    <br />

    <div>
        <label>Puanlama</label>
        <input type="int" class="form-control" asp-for="Review" />
    </div>
    <br />

    <div>
        <label>Yorum</label>
        <input type="text" class="form-control" asp-for="Comment" />
    </div>
    <br />

    <div class="text-center">
        <button class="btn btn-outline-primary">Güncelle</button>
    </div>
    <br />
</form>

